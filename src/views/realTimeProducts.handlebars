{{! src/views/realTimeProducts.handlebars }}
<section>
  <h2>Lista en tiempo real</h2>
  <div id="products" class="grid">
    {{#each products}}
      <div class="card" data-id="{{id}}">
        <h3>{{title}}</h3>
        <p class="muted">{{description}}</p>
        <p><strong>${{price}}</strong> · Stock: {{stock}} · Cat: {{category}}</p>
        <p><small>code: {{code}} · id: {{id}}</small></p>
      </div>
    {{/each}}
  </div>
</section>

<section>
  <h2>Crear producto (WebSocket)</h2>
  <form id="createForm">
    <div class="row">
      <input name="title" placeholder="Título" required />
      <input name="description" placeholder="Descripción" required />
      <input name="code" placeholder="Código único" required />
    </div>
    <div class="row">
      <input name="price" type="number" step="0.01" placeholder="Precio" required />
      <input name="stock" type="number" placeholder="Stock" required />
      <input name="category" placeholder="Categoría" required />
    </div>
    <div class="row">
      <select name="status">
        <option value="true">Activo</option>
        <option value="false">Inactivo</option>
      </select>
      <input name="thumbnails" placeholder='Thumbnails (ej: /imgs/a.png,/imgs/b.png)' />
    </div>
    <button type="submit">Crear</button>
    <div id="createMsg" class="muted"></div>
  </form>
</section>

<section>
  <h2>Eliminar producto (WebSocket)</h2>
  <form id="deleteForm" class="row">
    <input name="id" type="number" placeholder="ID del producto" required />
    <button type="submit" class="danger">Eliminar</button>
    <div id="deleteMsg" class="muted"></div>
  </form>
</section>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realtime.js"></script>
